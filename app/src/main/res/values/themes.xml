<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Proj6" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- App brand colors -->
        <item name="colorPrimary">@color/accent_pink</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Surface/background colors -->
        <item name="colorSurface">@color/app_background</item>
        <item name="colorOnSurface">@color/text_primary</item>

        <!-- System bars -->
        <item name="android:statusBarColor">@color/app_background</item>
        <item name="android:navigationBarColor">@color/app_background</item>

        <!-- Default background -->
        <item name="android:windowBackground">@color/app_background</item>

        <!-- Material 3 overrides (non-android namespace) -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <!-- Just telling tools what theme is used in previews -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">true</item>
    </style>

</resources>
